---
import { MENU_LINKS } from "@/data/constants";

const url = new URL(Astro.request.url);
---

<header class="mb-16 md:mb-20">
	<div class="flex flex-col gap-6 border-b border-line pb-6 md:flex-row md:items-end md:justify-between">
		<div>
			<a href="/" aria-current={url.pathname === "/" ? "page" : false}>
				<p class="meta-text">Evey Huang 黄嘉馨</p>
				<!-- <p class="mt-2 text-2xl font-semibold tracking-tight text-accent-2 sm:text-3xl">
					
				</p> -->
				<p class="mt-1 text-sm text-muted">
					Human-AI Researcher, Designer, and Engineer.
				</p>
			</a>
		</div>

		<nav aria-label="Main menu" class="flex flex-wrap gap-x-5 gap-y-2">
			{
				MENU_LINKS.map((link) => (
					<a
						href={link.path}
						class="nav-link"
						aria-current={url.pathname === link.path ? "page" : false}
						rel="prefetch"
					>
						{link.title}
					</a>
				))
			}
		</nav>
	</div>
</header>
