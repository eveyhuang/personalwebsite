---
import { MENU_LINKS } from "@/data/constants";

const year = new Date().getFullYear();
---

<footer class="mt-20 border-t border-line pt-6 text-sm text-muted">
	<div class="flex flex-col gap-4 sm:flex-row sm:items-center sm:justify-between">
		<p class="meta-text">Copyright {year} Evey Huang</p>
		<nav aria-label="Footer menu" class="flex flex-wrap gap-x-4 gap-y-1">
			{
				MENU_LINKS.map((link) => (
					<a class="nav-link" href={link.path} rel="prefetch">
						{link.title}
					</a>
				))
			}
		</nav>
	</div>
</footer>
