---
import { SOCIAL_LINKS } from "@/data/constants";
---

<div class="flex flex-wrap items-center gap-3" aria-label="Social links">
	
	<a
		class="button-pill"
		href={SOCIAL_LINKS.linkedin}
		target="_blank"
		rel="noopener noreferrer"
	>
		LinkedIn
	</a>
	<a class="button-pill" href={`mailto:${SOCIAL_LINKS.email}`}>Email</a>
	
	
	<a
		class="button-pill"
		href={SOCIAL_LINKS.github}
		target="_blank"
		rel="noopener noreferrer"
	>
		Github
	</a>

	<a
		class="button-pill"
		href={SOCIAL_LINKS.google_scholar}
		target="_blank"
		rel="noopener noreferrer"
	>
		Google Scholar
	</a>
</div>
