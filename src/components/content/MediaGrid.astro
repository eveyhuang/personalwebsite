---
interface MediaItem {
	src: string;
	alt: string;
	caption?: string;
}

interface Props {
	left: MediaItem;
	right: MediaItem;
}

const { left, right } = Astro.props;
---

<div class="my-8 grid gap-3 md:grid-cols-2">
	<figure>
		<img src={left.src} alt={left.alt} loading="lazy" decoding="async" />
		{left.caption && <figcaption>{left.caption}</figcaption>}
	</figure>
	<figure>
		<img src={right.src} alt={right.alt} loading="lazy" decoding="async" />
		{right.caption && <figcaption>{right.caption}</figcaption>}
	</figure>
</div>
