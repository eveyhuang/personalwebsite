---
import PageLayout from "@/layouts/Base";

const conferenceAndJournalPapers = [
	{
		title:
			"AI That Helps Us Help Each Other: A Proactive System for Scaffolding Mentor-Novice Collaboration in Entrepreneurship Coaching",
		authors: "Evey Huang, Matthew Easterday, Elizabeth Gerber",
		venue: "Proc. ACM Hum.-Comput. Interact., CSCW368",
		year: "2025",
		link: "http://arxiv.org/abs/2508.11052",
	},
	{
		title:
			"Opportunities, tensions, and challenges in computational approaches to addressing online harassment [Honorable Mention]",
		authors: "Evey Huang, Abhraneel Sarma, Sohyeon Hwang, Eshwar Chandrasekharan, Stevie Chancellor",
		venue: "Designing Interactive Systems Conference (DIS)",
		year: "2024",
		link: "https://dl.acm.org/doi/abs/10.1145/3643834.3661623",
	},
	{
		title:
			"Intelligent Coaching Systems: Understanding One-to-many Coaching for Ill-defined Problem Solving",
		authors: "Evey Huang, Daniel Rees Lewis, Shubhanshi Gaudani, Matthew Easterday, Elizabeth Gerber",
		venue: "Proc. ACM Hum.-Comput. Interact. 7, CSCW",
		year: "2023",
		link: "https://doi.org/10.1145/3579614",
	},
	{
		title: "Designing a Model for Deliberation-based Learning",
		authors: "Spencer Carlson, Kristine Lu, Evey Huang, Elizabeth Gerber, Matthew Easterday",
		venue: "International Conference of the Learning Sciences",
		year: "2020",
		link: "https://www.researchgate.net/publication/339912236_Designing_a_Model_for_Deliberation-Based_Learning",
	},
	{
		title: "Interacting with Literary Style through Computational Tools",
		authors: "Sarah Sterman, Evey Huang, Vivian Liu, Eric Paulos",
		venue: "CHI Conference on Human Factors in Computing Systems",
		year: "2020",
		link: "https://dl.acm.org/doi/10.1145/3313831.3376730",
	},
	{
		title: "No More One Liners: Bringing Context into Emoji Recommendations",
		authors:
			"Joon-Gyum Kim, Taesik Gong, Bogoan Kim, JaeYeon Park, Woojeong Kim, Evey Huang, Kyungsik Han, Juho Kim, JeongGil Ko, Sung-Ju Lee",
		venue: "ACM Transactions on Social Computing",
		year: "2019",
		link: "https://dl.acm.org/doi/abs/10.1145/3373146",
	},
];

const workshopsAndPresentations = [
	{
		title: "Designing Technology to Support Coaching in Informal Learning Environments",
		authors: "Evey Huang, Daniel Rees Lewis, Matthew Easterday, Elizabeth Gerber",
		venue: "CHI '23 workshop on Digital Skills for the Creative Practitioner",
		year: "2023",
		link: "https://chi2023digitalskillsforthecreativepractitioner.files.wordpress.com/2023/04/chi23_informal_learning.pdf",
	},
	{
		title: "Designing Intelligent Coaching Systems to Support Equitable Engagement in Making",
		authors: "Evey Huang, Matthew Easterday, Elizabeth Gerber",
		venue: "CHI '22 workshop on Learning Hands-on Creative and Maker Skills",
		year: "2022",
		link: "https://drive.google.com/file/d/1YXq4ev17ana0sbxdgX2ie0BwLN9uLEDG/view?usp=sharing",
	},
	{
		title: "Encouraging Disagreements to Integrate Diversity in Collective Intelligence",
		authors: "Evey Huang, Matthew Easterday, Elizabeth Gerber",
		venue: "CHI '20 workshop on Effective Activism for Change",
		year: "2020",
	},
];

const dissertation = {
	title:
		"Human-AI Collaboration For Entrepreneurship Coaching: Leveraging a Cognitive Model and an LLM to Provide Proactive, Adaptive, and Differentiated Support",
	authors: "Evey Huang",
	venue: "Doctoral dissertation",
	year: "2024",
	link: "https://www.proquest.com/openview/d0591dc834a0e8bf80c41883948c8e5d/1?cbl=18750&diss=y&pq-origsite=gscholar",
};

const meta = {
	title: "Publications",
	description: "Selected publications, workshop papers, and dissertation",
};
---

<PageLayout meta={meta}>
	<section>
		<div class="section-head">
			<h1>Publications</h1>
			<p class="section-label">Research output</p>
		</div>
		<p class="max-w-3xl text-[1.03rem] text-muted">
			Selected papers and presentations across human-AI collaboration, intelligent coaching systems,
			and computational social science.
		</p>
	</section>

	<section class="section-block">
		<div class="section-head">
			<h2>Conference & Journal Papers</h2>
			<p class="section-label">Peer-reviewed</p>
		</div>
		<div class="space-y-3">
			{
				conferenceAndJournalPapers.map((paper, index) => (
					<article class="surface-card">
						<p class="meta-text">{String(index + 1).padStart(2, "0")} · {paper.year}</p>
						<h3 class="mt-2 text-xl font-medium">{paper.title}</h3>
						<p class="mt-2 text-sm text-muted">{paper.authors}</p>
						<p class="text-sm text-muted">{paper.venue}</p>
						{
							paper.link && (
								<a
									class="mt-3 inline-flex cactus-link text-sm"
									href={paper.link}
									target="_blank"
									rel="noopener noreferrer"
								>
									View publication
								</a>
							)
						}
					</article>
				))
			}
		</div>
	</section>

	<section class="section-block">
		<div class="section-head">
			<h2>Workshop & Conference Presentations</h2>
			<p class="section-label">Invited and workshop</p>
		</div>
		<div class="space-y-3">
			{
				workshopsAndPresentations.map((paper, index) => (
					<article class="surface-card">
						<p class="meta-text">{String(index + 1).padStart(2, "0")} · {paper.year}</p>
						<h3 class="mt-2 text-xl font-medium">{paper.title}</h3>
						<p class="mt-2 text-sm text-muted">{paper.authors}</p>
						<p class="text-sm text-muted">{paper.venue}</p>
						{
							paper.link && (
								<a
									class="mt-3 inline-flex cactus-link text-sm"
									href={paper.link}
									target="_blank"
									rel="noopener noreferrer"
								>
									View material
								</a>
							)
						}
					</article>
				))
			}
		</div>
	</section>

	<section class="section-block">
		<div class="section-head">
			<h2>Dissertation</h2>
			<p class="section-label">Doctoral work</p>
		</div>
		<article class="surface-card">
			<p class="meta-text">{dissertation.year}</p>
			<h3 class="mt-2 text-xl font-medium">{dissertation.title}</h3>
			<p class="mt-2 text-sm text-muted">{dissertation.authors}</p>
			<p class="text-sm text-muted">{dissertation.venue}</p>
			<a
				class="mt-3 inline-flex cactus-link text-sm"
				href={dissertation.link}
				target="_blank"
				rel="noopener noreferrer"
			>
				View dissertation
			</a>
		</article>
	</section>
</PageLayout>
