			{
				workshopsAndPresentations.map((paper, index) => (
					<li class="border-t border-dashed border-line pt-4">
						<p>
							[{index + 1}] <strong>{paper.title}</strong>
						</p>
						<p class="text-sm text-muted">{paper.authors}</p>
						<p class="text-sm text-muted">{paper.year}. {paper.venue}</p>
						{
							paper.link && (
								<a class="cactus-link text-sm" href={paper.link} target="_blank" rel="noopener noreferrer">
									View material
								</a>
							)
						}
					</li>
				))
			}
		</ul>
	</section>

	<section class="section-block">
		<div class="section-head">
			<h2>Dissertation</h2>
			<p class="section-label">Doctoral work</p>
		</div>
		<ul class="space-y-5">
			<li class="border-t border-dashed border-line pt-4">
				<p>
					[1] <strong>{dissertation.title}</strong>
				</p>
				<p class="text-sm text-muted">{dissertation.authors}</p>
				<p class="text-sm text-muted">{dissertation.year}. {dissertation.venue}</p>
				<a
					class="cactus-link text-sm"
					href={dissertation.link}
					target="_blank"
					rel="noopener noreferrer"
